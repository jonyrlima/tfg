 TAG.BLOCKLIST=
ELSE
 FOR 1 <EVAL <ARGV> - 1>
 LOCAL.BLOCK<dLOCAL._FOR>=<ARGV[<dLOCAL._FOR>]>
 LOCAL.COUNT ++
 ENDFOR
 FOR 1 <LOCAL.COUNT>
 IF !(<LOCAL.BLOCK<dLOCAL._FOR>>==<ARGV[0]>)
