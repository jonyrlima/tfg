[ITEMDEF i_barrel_trash]
NAME=Trash Barrel
id=0e77
SKILLMAKE=CARPENTRY 60.0, t_carpentry
RESOURCES=20 i_log
VALUE=5
WEIGHT=21

ON=@CREATE
COLOR 0450

ON=@DROPON_SELF
SRC.SYSMESSAGE Voce jogou o <ARGO.NAME> no lixo
TRY UID.<ARGO.UID>.REMOVE

ON=@DCLICK
IF (!<SRC.ISGM>)
	SRC.SYSMESSAGE O lixo foi reciclado.

	FORCONT <UID>
		REMOVE
	ENDFOR

	RETURN 1
ENDIF

[EOF]