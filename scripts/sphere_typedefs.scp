[FUNCTION f_transferguild]
If (<ARGO.ISITEM>)
 sysmessage You cannot transfer a guild to that.
 Return
Endif
If (<ARGO.NPC>)
 sysmessage You cannot transfer a guild to that.
 Return
Endif
If (<argo>==<uid>)
 sysmessage You are the master of <uid.<args>.name> already.
 Return
Endif
If !(<memoryfindtype.memory_guild.link.uid>==<args>)
 sysmessage You are not a member of the guild.
 Return
Endif
local.REF69=<REF69>
REF69=<ARGO.UID>
If !(<REF69.memoryfindtype.memory_guild.link.uid>==<args>)
 sysmessage That player is not a member of the guild.
 REF69=<local.REF69>
 Return
Endif
TRY uid.<args>.masteruid=<REF69.uid>
sysmessage You have transfered the guild to <REF69.name>.
REF69.sysmessage You are now the master of <uid.<args>.name>.
REF69=<local.REF69>

[TYPEDEF t_landmine]
ON=@Step
   IF !(<MORE1>)
      EFFECT=3,i_fx_explode            // explosion animation
      SOUND=snd_SPELL_EXPLOSION        // explosion sound
      SRC.DAMAGE={5 20} <DEF.dam_fire> // cause damage
      MORE1=1                          // disarm landmine
      TIMER=30                         // trigger @Timer after 30 seconds
   ELSE
      SAY Click
   ENDIF
   RETURN 0   // allow the step
ON=@Timer
   MORE1=0    // activate landmine
   RETURN 1   // prevent decay
ON=@DClick
   // Can be disarmed by a player with decent tinkering
   IF (<SRC.SKILLCHECK TINKERING 300>)
      MORE1=1   // disarm landmine
      TIMER=60  // trigger @Timer after 60 seconds
      MESSAGE Mine is disarmed...
   ELSE
      MESSAGE You fail to disarm the Mine!
      IF (RAND(2))
         TRIGGER @STEP
      ELSE
         MESSAGE The mine does not go off. Close one!
      ENDIF
   ENDIF
   RETURN 1

