	IF !(<SRC.ISGM>) && (<LINK> != 04fffffff)
		IF (<SRC.UID> != <LINK.UID>)
			SRC.SYSMESSAGE @,,1 This item does not belong to you !
			TIMERF 0, CONT <LINK.FINDLAYER.layer_pack>

			RETURN 1
		ENDIF
	ENDIF

